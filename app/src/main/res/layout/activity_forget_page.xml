<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context="gridview.sample.test.lktailor.Forget_page">

      <LinearLayout
          android:layout_width="match_parent"
          android:id="@+id/back_linear"
          android:layout_margin="10dp"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/forget_back_btn"
            android:src="@drawable/back_arro"
            android:padding="2dp"
            />
          </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="25dp"
           android:layout_weight="0.1">
       </LinearLayout>

      </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/back_linear"
       android:orientation="vertical"
       android:layout_marginTop="5dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:id="@+id/image_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_from_bg"
        android:layout_below="@+id/image_logo">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/whitecolor"
            android:textSize="@dimen/_14sdp"
            android:breakStrategy="balanced"
            android:text="@string/reset_password1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Email Address"
                android:textSize="@dimen/_12sdp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone"
                android:id="@+id/forget_email"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:textColorHint="#ffffff"
                />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FE8085"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/password_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/forget_password"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textColorHint="#ffffff"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FE8085"></View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/forget_confim_password"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:imeActionLabel="Submit"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textColorHint="#ffffff"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FE8085"></View>

            </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="Get New Password"
            android:id="@+id/forget_btn_new_password"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:padding="8dp"
            android:textSize="@dimen/_12sdp"
            android:textColor="#ffffff"
            android:background="@drawable/button_login"/>

    </LinearLayout>
   </LinearLayout>

</RelativeLayout>
