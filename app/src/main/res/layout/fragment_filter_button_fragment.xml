<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="gridview.sample.test.lktailor.Filter_button_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_filter_option">


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/spinner1"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/spinner_button">
        </Spinner>

        <Spinner
            android:layout_height="@dimen/_33sdp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/spinner2"
            android:layout_marginRight="10dp"
            android:background="@drawable/spinner_button">
        </Spinner>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="Select by Fabric Code"
            android:padding="10dp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/search_button"
            />

        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="10dp"
            android:text="Search"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_button_solid_color"
            android:textSize="@dimen/_15sdp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"/>


    </LinearLayout>
</FrameLayout>
